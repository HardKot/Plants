{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~components": ["./src/components"],
      "~services": ["./src/services"],
      "~store": ["./src/store"],
      "~screens": ["./src/screens/*"],
      "~assets/*": ["./src/assets/*"],
      "~containers": ["./src/containers"],
      "~models/*": ["./src/models/*"],
      "~i18n": ["./src/i18n"],
      "~constant": ["./src/constant"],
      "~routes": ["./src/routes"],
      "~elements/*": ["./src/elements/*"],
      "~icons": ["./src/elements/icons"],
      "~layouts/*": ["./src/layouts/*"],
      "~globalStyle": ["./src/globalStyle"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
